<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.1"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.1 http://maven.apache.org/xsd/assembly-2.1.1.xsd">
    <id>distribution</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <source>src/main/resources/start-app.sh</source>
            <outputDirectory>.</outputDirectory>
        </file>
        <file>
            <source>src/main/resources/application.yml</source>
            <outputDirectory>config</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>src/main/resources/log4j2.xml</source>
            <outputDirectory>config</outputDirectory>
            <filtered>true</filtered>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>target</directory>
            <includes>
                <include>file-service-*.jar</include>
            </includes>
            <outputDirectory>.</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../dummy-pdf-or-png</directory>
            <includes>
                <include>*</include>
            </includes>
            <outputDirectory>dummy-pdf-or-png</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>